<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.labs.acw.MenuActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/android_pair_matching_application"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        />

    <LinearLayout
        android:id="@+id/fragments"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="mobile.labs.acw.MenuActivity"
        android:orientation="vertical"
        >
        <fragment
            class="mobile.labs.acw.PlayListFragment"
            android:id="@+id/play_list_fragment"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            />

        <fragment
            class="mobile.labs.acw.DownloadListFragment"
            android:id="@+id/download_list_fragment"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>